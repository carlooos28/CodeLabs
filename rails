---

# si ya esta instalado el proyecto
# agregar al gemfile
gem 'pg'

# depues de instalada 
bundle update 

# configurar config/database.yml

development:
  <<: *default
  adapter: postgresql
  encoding: unicode
  pool: 5
  host: localhost
  username: postgres
  password: ''
  database: curso_postgresql

# comando scaffold 
rails generate scaffold User name:string email:string

# Correr migraciones 
rake db:migrate

---

# root routes rails
root :to => "pages#show"

